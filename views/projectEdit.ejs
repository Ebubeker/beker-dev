<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/edit.css">
</head>

<body>
    <a href="/admin22042004" class="btn-submit">Go Back</a>

    <h1>Edit Projects</h1>

    <% let number = 1 %>

        <% products.forEach((prod)=>{ %>
            <section class="edit">
                <div class="container">
                    <form action="/editProject" method="POST">
                        <h1 style="font-size: 50px;">Project Number
                            <%= number %>
                        </h1>
                        <input type="text" name="id" placeholder="ID" value="<%= prod._id %> ">
                        <input type="text" name="title" placeholder="Title" value="<%= prod.title %> ">
                        <input type="text" name="slogan" placeholder="Slogan" value="<%= prod.slogan %> ">
                        <input type="text" name="image" placeholder="Image" value="<%= prod.image %> ">
                        <textarea type="text" name="description" placeholder="Description"><%= prod.description %></textarea>
                        <input type="text" name="repositoryLink" placeholder="Repository Link" value="<%= prod.repositoryLink %> ">
                        <input type="text" name="websiteLink" placeholder="Website Link" value="<%= prod.websiteLink %> ">
                        <button type="submit" class="btn-submit">Confirm Edit</button>
                    </form>
                </div>
            </section>
            <% number++ %>

                <%}) %>


                    <!-- Footer -->
                    <%- include('./partials/footer') %>
</body>

</html>